{
    "name": "cirrusidentity/simplesamlphp-utils",
    "description": "Utils classes for SSP modules",
    "autoload": {
        "psr-4": {
            "Cirrusidentity\\SspUtils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cirrusidentity\\Test\\SspUtils\\": "tests/src"
        }
    },
    "authors": [
        {
            "name": "Patrick Radtke",
            "email": "patrick@cirrusidentity.com"
        }
    ],
    "require": {
        "php": ">=7.4 || ^8.0",
        "simplesamlphp/simplesamlphp": "^1.18",
        "vimeo/psalm": "^5.6",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
	 "squizlabs/php_codesniffer": "3.*"
    },
    "config": {
        "allow-plugins": {
            "simplesamlphp/composer-module-installer": true
        }
    }
}
